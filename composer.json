{
    "name": "elegantly/laravel-seo",
    "description": "An Elegant & flexible SEO tag builder for Laravel",
    "keywords": [
        "Elegantly",
        "laravel",
        "laravel-seo",
        "seo",
        "opengraph"
    ],
    "homepage": "https://github.com/elegantengineeringtech/laravel-seo",
    "license": "MIT",
    "authors": [
        {
            "name": "Quentin Gabriele",
            "email": "quentin.gabriele@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.1",
        "larastan/larastan": "^3.0.0",
        "orchestra/testbench": "^10.1",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Elegantly\\Seo\\": "src/",
            "Elegantly\\Seo\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elegantly\\Seo\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-seo --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Elegantly\\Seo\\SeoServiceProvider"
            ],
            "aliases": {
                "Seo": "Elegantly\\Seo\\Facades\\Seo"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
